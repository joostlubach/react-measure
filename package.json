{
  "name": "react-measure",
  "description": "React hooks to measure elements.",
  "version": "1.0.0",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "yarn build:prepare && yarn build:tsc && yarn build:tsc-alias && yarn build:copy && yarn build:rsync",
    "build:prepare": "test -x .build && rm -rf .build; mkdir -p .build",
    "build:tsc": "tsc -p tsconfig.json --outDir .build",
    "build:tsc-alias": "tsc-alias -p tsconfig.json --outDir .build",
    "build:copy": "copyfiles -u 1 src/**/*.yml .build",
    "build:rsync": "rsync -uvaz --delete .build/ dist/; rm -rf .build",
    "clean": "rimraf .build dist",
    "test": "NODE_ENV=test jest"
  },
  "peerDependencies": {
    "react": "^18.0"
  },
  "dependencies": {
    "react-timer": "workspace:^"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.0.4",
    "vite": "^4.2.0",
    "vite-plugin-dts": "^2.1.0",
    "vite-tsconfig-paths": "^4.0.7"
  }
}
